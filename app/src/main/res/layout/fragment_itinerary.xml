<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.darktourism.Itinerary">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Budget for traveling in a day: "
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/Budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Enter Budget"
            android:textColorHint="#A87276"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:inputType="number"/>



        <TextView
            android:id="@+id/From"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="FROM:"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/StartPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Marina Bay Sands"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/To"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="TO:"
            android:textColor="#FFFFFF" />
        <Spinner
            android:id="@+id/spinnerAttractionChoiceTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DCDBD7" />

        <Button
            android:id="@+id/btnAddPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6E6E6E"
            android:text="Add To Iternary"
            android:textColor="#FFFFFF" />


        <TextView
            android:id="@+id/Iternary_Place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnDeletePlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6E6E6E"
            android:text="Delete Latest Place From Iternary"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/Iternary_Path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnBruteRoute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6E6E6E"
            android:text="Calculate"
            android:textColor="#FFFFFF" />



    </LinearLayout>


</FrameLayout>